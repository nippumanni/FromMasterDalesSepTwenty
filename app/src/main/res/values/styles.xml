<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomToolbarThemeWhite" parent= "@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">false</item>
        <item name="android:textColorPrimary">true</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--  parent is as it is below  -->
    <style name="mainCustomText" parent="@android:style/Widget.TextView">
    <item name="android:textSize">@dimen/reusable_textsize_12sp</item>
    <item name="android:textColor">@color/black_ff333333</item>
    <item name="android:background">@color/transparent_zero</item>
    <item name="MainCustomTypeFace">InterstateLight.ttf</item>

</style>
</resources>
